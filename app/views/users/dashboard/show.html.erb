<h1 class="text-white font-bold"> Welcome </h1>

<%= form_with url: user_friendships_path(current_user), method: :post, local: true do |form| %>
  <%= form.label "Add/Invite a friend by email.", class: "text-white" %><br>
  <%= form.text_field :email %>
  <%= form.submit "Add Friend", class: "button bg-blue-200 rounded-md mx-10 px-5"  %>
<% end %><br>

<div class="panels container bg-gray-200 w-full mx-auto type-page rounded-lg">
  <div class="grid grid-cols-3  cold-gap-12 md:col-gap-12 md:grid-cols-3 rounded-lg">
    <div class="grid grid-cols-1 col-gap-12 md:col-gap-12 md:grid-cols-1 rounded-lg scrolling-touch scrollbar-hidden overflow-x-scroll md:overflow-auto mx-6 md:mx-0">
      <section class="my_parties bg-gray-200">
        <header class="flex flex-col items-center bg-gray-200 rounded-lg">
          <%= "My Viewing Parties" %>
        </header>
        <%= render partial: "party", collection: current_user.parties %>
      </section>
    </div>
    <div class="grid grid-cols-1 col-gap-12 md:col-gap-12 md:grid-cols-1 rounded-lg scrolling-touch scrollbar-hidden overflow-x-scroll md:overflow-auto mx-6 md:mx-0">

      <section class="parties_im_invited_to bg-gray-200">
        <header class="flex flex-col items-center bg-gray-200">
          <h3> Party Invites </h3>
        </header>
        <%= render partial: "pending_invite", collection: current_user.guests, as: :guest %>
      </section>
    </div>

    <div class="grid grid-cols-1 mx-5 rounded-lg md:grid-cols-1 scrolling-touch scrollbar-hidden overflow-x-scroll md:overflow-auto mx-6 md:mx-0">
      <ul>
        <li><button id="friends-btn">Open Friends List</button></li>
        <li><button id="pending-btn">Pending Friends List</button></li>
        <li><button id="invites-btn">Friend Invites List</button></li>
      </ul>
          
    <%= render "users/dashboard/friends/panel" %>
    </div>
  </div>
</div>