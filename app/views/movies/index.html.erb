<ul class="grid grid-gutter grid-flow-col col-start-1 col-end-auto grid-cols-max-content gap-3 list-none md:flex md:flex-wrap -mx-6 md:mx-0 py-1 md:py-2 overflow-x-auto md:overflow-x-visible scrolling-touch scrollbar-hidden " >
    <li class="flex-none inline-flex">
        <%= button_to "Top Rated Movies", movies_path, params: {top_rated: true}, method: :get %>
    </li>
    <li class="flex-none inline-flex">
        <%= form_with url: movies_path, method: :get, local: true do |form| %>
            <%= form.label "Genre:" %>
            <%= form.select :genre, @genres.map {|genre| [genre.name, genre.id]}, prompt: "Select Genre" %>
            <%= form.submit "Find by Genre" %>
        <% end %>
    </li>
    <li class="flex-none inline-flex-right">
    <%= form_with url: movies_path, method: :get, local: true do |form| %>
        <%= form.label "Title:" %>
        <%= form.text_field :query %>
        <%= form.submit "Find Movies" %>
    <% end %>
    </li>
</ul>

<%= render(partial: "movie", collection: @movies) || "There are no movies available"%>
