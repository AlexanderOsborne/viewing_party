<%= button_to "Top Rated Movies", movies_path, params: {top_rated: true}, method: :get %>

<%= form_with url: movies_path, method: :get, local: true do |form| %>
    <%= form.label "Title:" %>
    <%= form.text_field :query %>
    <%= form.submit "Find Movies" %>
<% end %>

<%= form_with url: movies_path, method: :get, local: true do |form| %>
    <%= form.label "Genre:" %>
    <%= form.select :genre, @genres.map {|genre| [genre.name, genre.id]}, prompt: "Select Genre" %>
    <%= form.submit "Find by Genre" %>
<% end %>

<% if @movies.respond_to? :each %>
    <% @movies.each do |movie| %>
        <%= link_to movie.title, movie_path(movie.api_id) %>
        <%= movie.popularity %><br>
    <% end %>
<% end %>