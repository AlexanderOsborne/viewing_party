<%= button_to "Top Rated Movies", movies_path, params: {top_rated: true}, method: :get %>

<%= form_with url: movies_path, method: :get, local: true do |form| %>
    <%= form.label "Title:" %>
    <%= form.text_field :query %>
    <%= form.submit "Find Movies", class: "input rounded-sm py-1 md:py-2 px-5 bg-blue-200 hover:bg-blue-500 hover:text-white focus:bg-blue-500 focus:text-white transition duration-150-ease-in-out" %>
<% end %>

<%= form_with url: movies_path, method: :get, local: true do |form| %>
    <%= form.label "Genre:" %>
    <%= form.select :genre, @genres.map {|genre| [genre.name, genre.id]}, prompt: "Select Genre" %>
    <%= form.submit "Find by Genre", class: "button rounded-sm py-1 md:py-2 px-5 bg-blue-200 hover:bg-blue-500 hover:text-white focus:bg-blue-500 focus:text-white transition duration-150-ease-in-out" %>
<% end %>

<% if @movies.respond_to? :each %>
    <% @movies.each do |movie| %>
        <%= link_to movie.title, movie_path(movie.api_id) %>
        <%= movie.vote_average %><br>
    <% end %>
<% end %>